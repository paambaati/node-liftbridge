{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-typescript/base"
    ],
    "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "no-console": 0,
        "max-len": ["error", { "code": 180 }],
        "max-classes-per-file": [2, 3],
        "arrow-parens": ["error", "as-needed"]
    }
}